package com.ujiuye.work;

import java.util.Random;
import java.util.Scanner;

public class HomeWork03 {
	public static void main(String[] args) {
		Random s = new Random();
		Scanner a = new Scanner(System.in);
		
		System.out.print("请输入红球号");
		int radb = s.nextInt();
		
		System.out.print("请输入蓝球号");
		int buleb = s.nextInt();	
		//蓝色球数
		int buleBall = s.nextInt(16)+1;
		//红色球数
		int radBall = s.nextInt(32)+1;
		
		if(buleb ==buleBall && radb == radBall  ) {
			System.out.println("蓝球，红球中奖1等奖,50万元");
		}else if (radb == radBall ) {
			System.out.println("蓝球，红球中奖2等奖,30万元");
		}else if(buleb == buleBall) {
			System.out.println("蓝球，红球中奖3等奖,10万元");
		} 
	}
}
