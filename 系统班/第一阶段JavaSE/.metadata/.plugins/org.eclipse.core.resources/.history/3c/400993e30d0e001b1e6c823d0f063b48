package com.ujiuye.work;
//键盘输入导包
import java.util.Scanner;

public class HomeWork02 {
	public static void main(String[] args) {
		//a为键盘输入名
		Scanner a = new Scanner(System.in);
		//输入整数
		System.out.print("请输入一个整数：");
		int x = a.nextInt();
		int y;
		if(x>=3) {
			y = 2*x + 1 ;
		}else if( x > -1 && x < 3) {
			y = 2*x ;
		}else if(x < -1) {
			y = 2*x - 1 ;
		}
		System.out.println(y);
	}

}
